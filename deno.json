{
  "nodeModulesDir": "auto",
  "lock": false,

  "tasks": {
    "eleventy": "deno run -A npm:@11ty/eleventy",
    "build": "deno task eleventy",
    "serve": "deno task eleventy --serve",
    "purge": "deno run -A purgecss --css _site/bundle.css --content _site/**/*.html --output _site/bundle.css -font -keyframes -v",
    "minify": "deno run -A html-minifier-next --input-dir=_site --output-dir=TEMP --case-sensitive --collapse-whitespace --remove-comments --minify-js true && rm -rf _site && mv TEMP _site"
  },

  "imports": {
    "@11tyrocks/eleventy-plugin-sass-lightningcss": "npm:@11tyrocks/eleventy-plugin-sass-lightningcss@^1.3.0",
    "@11ty/eleventy": "npm:@11ty/eleventy@^3.1.2",
    "bulma": "npm:bulma@^1.0.4",
    "eleventy-plugin-vento": "npm:eleventy-plugin-vento@^5.2.1",
    "html-minifier-next": "npm:html-minifier-next@^4.16.4",
    "milligram": "npm:milligram@^1.4.1",
    "purgecss": "npm:purgecss@6.0.0",
    "sass": "npm:sass@^1.97.1"
  }
}
